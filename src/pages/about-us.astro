---
export const prerender = true;
import Base from "#layouts/Base.astro";
import * as aboutUsPage from "#content/about-us.md";

const { title, description, headline } = aboutUsPage.frontmatter;
---

<Base>
  <Fragment slot="head">
    <title>{title}</title>
    <meta name="description" content={description} />
  </Fragment>

  <main id="main" class="container" data-sb-object-id="src/content/about-us.md">
    <section class="pt-header pb-[4em]">
      <h1 class="font-display text-6xl font-bold" data-sb-field-path="headline">
        {headline}
      </h1>
    </section>

    <section>
      <h2 class="mb-4 font-bold text-4xl font-display">Our Mission</h2>
      <div class="flex">
        <div class="grow">
          <div class="max-w-prose">
            <p class="text-lg">Lorem ipsum dolor sit amet consectetur adipisicing elit. Aliquid quos placeat dolorum enim omnis alias nobis vel explicabo doloremque, ut non doloribus ipsam fuga repellat, rerum eligendi beatae assumenda nam!</p>
          </div>
        </div>
        <dl>
          <dt class="font-semibold text-3xl">6</dt>
          <dd class="mt-2">Delicious apple varieties</dd>
          <dt class="mt-6 font-semibold text-3xl">1.2 million</dt>
          <dd class="mt-2">Apples sorted annually</dd>
          <dt class="mt-6 font-semibold text-3xl">4th</dt>
          <dd class="mt-2">Generation apple dealers</dd>
        </dl>
      </div>
    </section>
  </main>
</Base>
