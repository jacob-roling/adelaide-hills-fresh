---
export const prerender = true;
import Base from "#layouts/Base.astro";
import { getCollection, render, type CollectionEntry } from "astro:content";
import Time from "#components/Time.astro";

interface Props {
  post: CollectionEntry<"posts">;
}

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => ({
    params: {
      id: post.id,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);
const { title, description, publishedDate, updatedDate } = post.data;
---

<Base>
  <Fragment slot="head">
    <title>{title}</title>
    <meta name="description" content={description} />
  </Fragment>

  <main id="main" class="container">
    <article data-sb-object-id={`src/content/posts/${post.id}.md`}>
      <header class="pt-header">
        <div class="border-s border-neutral-6 ps-6">
          <p class="text-neutral-11">
            Published <Time data-controller="datetime" datetime={publishedDate.toISOString()} data-sb-field-path="publishedDate" />
          </p>
          <p class="text-neutral-11">
            Last updated <Time data-controller="datetime" datetime={updatedDate.toISOString()} data-sb-field-path="updatedDate" />
          </p>
        </div>

        <h1 class="mt-6 font-display font-bold text-5xl" data-sb-field-path="title">{title}</h1>
      </header>

      <div class="typography" data-sb-field-path="body">
        <Content />
      </div>
    </article>
  </main>
</Base>
