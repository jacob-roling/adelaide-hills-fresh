---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import Logo from "#assets/logo.png";
---

<header
  id="header"
  class="section bg-neutral-1 sticky top-0 left-0 z-10 w-full py-2"
  up-keep="true"
>
  <nav aria-label="primary" style="grid-column: content;">
    <ul class="flex items-center">
      <li>
        <a class="button link sr-only focus:not-sr-only" href="#main">
          Skip to content
        </a>
      </li>
      <li class="grow">
        <a class="block" href="/">
          <Image
            class="h-[80px] w-auto"
            slot="logo"
            src={Logo}
            alt="Adelaide Hills Fresh Logo"
            height="200"
            quality="max"
            loading="eager"
            aria-hidden="true"
          />
          <span class="sr-only">Home</span>
        </a>
      </li>
      <div class="contents">
        <li>
          <a class="button link" href="/">
            <span class="grow">Home</span>
          </a>
        </li>
        <li>
          <a class="button link" href="/about-us">
            <span class="grow">About Us</span>
          </a>
        </li>
      </div>
      <li class="hidden">
        <details open>
          <summary class="button icon group peer justify-center lg:hidden">
            <Icon
              class="text-2xl group-aria-expanded:hidden"
              name="heroicons:bars-3"
              aria-hidden="true"
            />
            <Icon
              class="hidden text-2xl group-aria-expanded:block"
              name="heroicons:x-mark"
              aria-hidden="true"
            />
            <span class="sr-only">Mobile Menu</span>
          </summary>
          <ul>
            <li>
              <a class="button link w-full" href="/">
                <span class="grow">Home</span>
              </a>
            </li>
            <li>
              <a class="button link w-full" href="/about-us">
                <span class="grow">About Us</span>
              </a>
            </li>
          </ul>
        </details>
      </li>
    </ul>
  </nav>
</header>
